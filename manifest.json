{
	"manifest_version": 2,
	"name": "Youtube Speed Tools",
	"version": "0.1",
	
	"description": "Track total time spent watching, actual time remaining, and time saved when using youtube's video speed modifier",
	"homepage_url": "https://github.com/ericweiler/Youtube-Speed-Tools-Extension",
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Youtube Speed Tools",
		"default_popup": "popup.html"
	},
	"permissions": ["storage", "tabs"],
	"content_scripts": [{
			"matches": ["https://www.youtube.com/*", "http://www.youtube.com/*"],
			"all_frames": true,
			"js": ["inject.js"],
			"run_at": "document_idle"
	}]
}